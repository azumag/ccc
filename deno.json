{
  "imports": {
    "discord.js": "npm:discord.js@^14.14.1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/assert": "jsr:@std/assert@^1.0.2",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "tasks": {
    "start": "deno run --allow-all src/bot.ts",
    "dev": "deno run --allow-all --watch src/bot.ts",
    "test": "deno test --allow-all tests/",
    "test:watch": "deno test --allow-all --watch tests/",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/**/*.ts tests/**/*.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  }
}
